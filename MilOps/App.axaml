<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MilOps"
             xmlns:converters="using:MilOps.Converters"
             x:Class="MilOps.App"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />

        <!-- Material Icons 스타일 -->
        <Style Selector="TextBlock.mi">
            <Setter Property="FontFamily" Value="avares://MilOps/Assets/Fonts/MaterialIcons-Regular.ttf#Material Icons"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <!-- 글로벌 버튼 스타일 (iOS 스타일 둥근 모서리) -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#00a872"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>
        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#488e72"/>
        </Style>

        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="Foreground" Value="#effdf6"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>
        <Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#3a3a3a"/>
        </Style>

        <!-- 카드 스타일 -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#1c1c1e"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

        <!-- 입력 필드 스타일 -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#2c2c2e"/>
            <Setter Property="Foreground" Value="#effdf6"/>
            <Setter Property="BorderBrush" Value="#3a3a3c"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#00a872"/>
        </Style>

        <!-- 콤보박스 스타일 -->
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#2c2c2e"/>
            <Setter Property="Foreground" Value="#effdf6"/>
            <Setter Property="BorderBrush" Value="#3a3a3c"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
    </Application.Styles>

    <Application.Resources>
        <!-- 앱 색상 팔레트 -->
        <Color x:Key="PrimaryColor">#00a872</Color>
        <Color x:Key="PrimaryDarkColor">#488e72</Color>
        <Color x:Key="AccentLightColor">#effdf6</Color>
        <Color x:Key="AccentWarmColor">#deb887</Color>

        <!-- 다크모드 배경 색상 -->
        <Color x:Key="BgPrimaryColor">#0a0a0a</Color>
        <Color x:Key="BgSecondaryColor">#1c1c1e</Color>
        <Color x:Key="BgTertiaryColor">#2c2c2e</Color>
        <Color x:Key="BorderColor">#3a3a3c</Color>

        <!-- 텍스트 색상 -->
        <Color x:Key="TextPrimaryColor">#ffffff</Color>
        <Color x:Key="TextSecondaryColor">#a0a0a0</Color>
        <Color x:Key="TextMutedColor">#6a6a6a</Color>

        <!-- SolidColorBrush 리소스 -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#00a872"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#488e72"/>
        <SolidColorBrush x:Key="AccentLightBrush" Color="#effdf6"/>
        <SolidColorBrush x:Key="AccentWarmBrush" Color="#deb887"/>
        <SolidColorBrush x:Key="BgPrimaryBrush" Color="#0a0a0a"/>
        <SolidColorBrush x:Key="BgSecondaryBrush" Color="#1c1c1e"/>
        <SolidColorBrush x:Key="BgTertiaryBrush" Color="#2c2c2e"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3a3a3c"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#ffffff"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#a0a0a0"/>

        <!-- Material Icons 폰트 리소스 -->
        <FontFamily x:Key="MaterialIcons">avares://MilOps/Assets/Fonts/MaterialIcons-Regular.ttf#Material Icons</FontFamily>
        <converters:StatusFilterConverter x:Key="StatusFilterConverter"/>
        <converters:BoolToTabBgConverter x:Key="BoolToTabBgConverter"/>
        <converters:BoolToTabFgConverter x:Key="BoolToTabFgConverter"/>
        <converters:BoolToSlotBgConverter x:Key="BoolToSlotBgConverter"/>
        <converters:BoolToSlotBorderConverter x:Key="BoolToSlotBorderConverter"/>
        <converters:BoolToSlotFgConverter x:Key="BoolToSlotFgConverter"/>
        <converters:BoolToDateBgConverter x:Key="BoolToDateBgConverter"/>
        <converters:BoolToDateFgConverter x:Key="BoolToDateFgConverter"/>
        <converters:BoolToSaveBtnColorConverter x:Key="BoolToSaveBtnColorConverter"/>
        <converters:BoolToSaveBtnTextConverter x:Key="BoolToSaveBtnTextConverter"/>
    </Application.Resources>
</Application>