<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MilOps"
             xmlns:converters="using:MilOps.Converters"
             x:Class="MilOps.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />

        <!-- Material Icons 스타일 -->
        <Style Selector="TextBlock.mi">
            <Setter Property="FontFamily" Value="avares://MilOps/Assets/Fonts/MaterialIcons-Regular.ttf#Material Icons"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Application.Styles>

    <Application.Resources>
        <!-- Material Icons 폰트 리소스 -->
        <FontFamily x:Key="MaterialIcons">avares://MilOps/Assets/Fonts/MaterialIcons-Regular.ttf#Material Icons</FontFamily>
        <converters:StatusFilterConverter x:Key="StatusFilterConverter"/>
        <converters:BoolToTabBgConverter x:Key="BoolToTabBgConverter"/>
        <converters:BoolToTabFgConverter x:Key="BoolToTabFgConverter"/>
        <converters:BoolToSlotBgConverter x:Key="BoolToSlotBgConverter"/>
        <converters:BoolToSlotBorderConverter x:Key="BoolToSlotBorderConverter"/>
        <converters:BoolToSlotFgConverter x:Key="BoolToSlotFgConverter"/>
        <converters:BoolToDateBgConverter x:Key="BoolToDateBgConverter"/>
        <converters:BoolToDateFgConverter x:Key="BoolToDateFgConverter"/>
        <converters:BoolToSaveBtnColorConverter x:Key="BoolToSaveBtnColorConverter"/>
        <converters:BoolToSaveBtnTextConverter x:Key="BoolToSaveBtnTextConverter"/>
    </Application.Resources>
</Application>