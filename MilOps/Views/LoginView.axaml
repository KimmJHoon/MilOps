<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MilOps.ViewModels"
             x:Class="MilOps.Views.LoginView"
             x:DataType="vm:LoginViewModel">

  <Grid Background="#000000">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                Spacing="20" Width="300" Margin="20">

      <!-- 앱 타이틀 -->
      <TextBlock Text="군-지자체 일정관리"
                 FontSize="24"
                 Foreground="White"
                 HorizontalAlignment="Center"
                 Margin="0,0,0,30"/>

      <!-- 아이디 입력 -->
      <StackPanel Spacing="5">
        <TextBlock Text="아이디" Foreground="White" FontSize="14"/>
        <TextBox Text="{Binding UserId}"
                 Watermark="아이디를 입력하세요"
                 Background="#333333"
                 Foreground="White"
                 BorderBrush="#555555"
                 Padding="10"/>
      </StackPanel>

      <!-- 비밀번호 입력 -->
      <StackPanel Spacing="5">
        <TextBlock Text="비밀번호" Foreground="White" FontSize="14"/>
        <TextBox Text="{Binding Password}"
                 PasswordChar="*"
                 Watermark="비밀번호를 입력하세요"
                 Background="#333333"
                 Foreground="White"
                 BorderBrush="#555555"
                 Padding="10"/>
      </StackPanel>

      <!-- 에러 메시지 -->
      <TextBlock Text="{Binding ErrorMessage}"
                 Foreground="#FF6B6B"
                 FontSize="12"
                 HorizontalAlignment="Center"
                 IsVisible="{Binding HasError}"/>

      <!-- 로그인 버튼 -->
      <Button Command="{Binding LoginCommand}"
              HorizontalAlignment="Stretch"
              HorizontalContentAlignment="Center"
              Background="#00AA00"
              Foreground="White"
              Padding="15"
              Margin="0,10,0,0">
        <TextBlock Text="로그인" FontSize="16"/>
      </Button>

    </StackPanel>
  </Grid>
</UserControl>
