<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MilOps.ViewModels"
             xmlns:models="using:MilOps.Models"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="MilOps.Views.NotificationView"
             x:DataType="vm:NotificationViewModel"
             DataContext="{x:Null}">

  <Grid Background="#0a0a0a" RowDefinitions="Auto,*">
    <!-- 액션 바 - iOS 스타일 -->
    <Border Grid.Row="0" Background="#1c1c1e" Padding="16,12" CornerRadius="0,0,20,20">
      <Grid ColumnDefinitions="*,Auto,Auto">
        <!-- 읽지 않은 개수 -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
          <TextBlock Text="읽지 않음" FontSize="14" Foreground="#808080" VerticalAlignment="Center"/>
          <Border Background="#00a872" CornerRadius="12" MinWidth="24" Height="24"
                  Padding="8,0" HorizontalAlignment="Center">
            <TextBlock Text="{Binding UnreadCount}" FontSize="13" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
        </StackPanel>

        <!-- 모두 읽음 버튼 -->
        <Button Grid.Column="1" Command="{Binding MarkAllAsReadCommand}"
                Background="#2c2c2e" Padding="12,8" CornerRadius="10" Margin="0,0,8,0"
                IsVisible="{Binding !!UnreadCount}">
          <StackPanel Orientation="Horizontal" Spacing="6">
            <TextBlock Text="&#xe877;" FontFamily="{StaticResource MaterialIcons}"
                       FontSize="16" Foreground="#00a872" VerticalAlignment="Center"/>
            <TextBlock Text="모두 읽음" FontSize="13" Foreground="#00a872" VerticalAlignment="Center"/>
          </StackPanel>
        </Button>

        <!-- 새로고침 버튼 -->
        <Button Grid.Column="2" Command="{Binding RefreshCommand}"
                Background="#2c2c2e" Padding="10,8" CornerRadius="10">
          <TextBlock Text="&#xe5d5;" FontFamily="{StaticResource MaterialIcons}"
                     FontSize="20" Foreground="#effdf6"/>
        </Button>
      </Grid>
    </Border>

    <!-- 알림 목록 -->
    <Grid Grid.Row="1" Margin="12,12,12,0">
      <!-- 빈 상태 -->
      <Border Background="#1c1c1e" CornerRadius="16" Padding="24"
              VerticalAlignment="Center" HorizontalAlignment="Center"
              IsVisible="{Binding !HasNotifications}">
        <StackPanel>
          <Border Background="#2c2c2e" Width="80" Height="80" CornerRadius="40" HorizontalAlignment="Center">
            <TextBlock Text="&#xe7f6;" FontFamily="{StaticResource MaterialIcons}"
                       FontSize="36" Foreground="#808080"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Border>
          <TextBlock Text="{Binding EmptyMessage}" FontSize="16" Foreground="#808080"
                     HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
      </Border>

      <!-- 알림 리스트 -->
      <ScrollViewer VerticalScrollBarVisibility="Auto"
                    IsVisible="{Binding HasNotifications}">
        <ItemsControl ItemsSource="{Binding Notifications}">
          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="models:Notification">
              <Button Command="{Binding $parent[ItemsControl].((vm:NotificationViewModel)DataContext).SelectNotificationCommand}"
                      CommandParameter="{Binding}"
                      Background="Transparent" Padding="0" Margin="0,0,0,8"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Stretch">
                <Border Background="{Binding BackgroundColor}" Padding="16,14" CornerRadius="14"
                        BorderBrush="#2c2c2e" BorderThickness="1">
                  <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- 아이콘 -->
                    <Border Grid.Column="0" Width="44" Height="44" CornerRadius="22"
                            Background="{Binding TypeColor}" Margin="0,0,14,0"
                            VerticalAlignment="Top">
                      <TextBlock Text="{Binding TypeIcon}" FontSize="20"
                                 FontFamily="{StaticResource MaterialIcons}"
                                 Foreground="White"
                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <!-- 내용 -->
                    <StackPanel Grid.Column="1" Spacing="4">
                      <TextBlock Text="{Binding Title}" FontSize="15"
                                 Foreground="#effdf6"/>
                      <TextBlock Text="{Binding Message}" FontSize="13" Foreground="#b0b0b0"
                                 TextWrapping="Wrap" MaxLines="2" TextTrimming="CharacterEllipsis"/>
                      <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,2,0,0">
                        <TextBlock Text="&#xe8b5;" FontFamily="{StaticResource MaterialIcons}"
                                   FontSize="12" Foreground="#666666" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding TimeAgo}" FontSize="12" Foreground="#666666"/>
                      </StackPanel>
                    </StackPanel>

                    <!-- 읽지 않음 표시 -->
                    <Border Grid.Column="2" Width="10" Height="10" CornerRadius="5"
                            Background="#00a872" VerticalAlignment="Top" Margin="8,4,0,0"
                            IsVisible="{Binding !IsRead}"/>
                  </Grid>
                </Border>
              </Button>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>

      <!-- 로딩 오버레이 -->
      <Border Background="#CC0a0a0a" IsVisible="{Binding IsLoading}" CornerRadius="16">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
          <TextBlock Text="&#xe627;" FontFamily="{StaticResource MaterialIcons}"
                     FontSize="36" Foreground="#00a872" HorizontalAlignment="Center"/>
          <TextBlock Text="로딩 중..." FontSize="16" Foreground="#effdf6"
                     HorizontalAlignment="Center"/>
        </StackPanel>
      </Border>
    </Grid>
  </Grid>
</UserControl>
